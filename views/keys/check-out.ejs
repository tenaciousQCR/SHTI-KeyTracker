<!DOCTYPE html>
<html>
    <%- include("../include/head.ejs"); %>
    
    <body>
        <%- include("../include/top-bar") %>
        <%- include("../include/header"); %>
        
        <main>
            <table>
                <tr>
                    <td>Key ID</td>
                    <td><%= key.id %></td>
                </tr>
                
                <tr>
                    <td>Type</td>
                    <td><%= key.type %></td>
                </tr>
                
                <tr>
                    <td>Location</td>
                    <td><%= key.location %></td>
                </tr>
                
                <tr>
                    <td>Allocations</td>
                    <td><%= key.allocations %> / <%= key.quantity %></td>
                </tr>
            </table>
            
            <form class="bordered-form" action="/action/check-out" method="POST">
                <input type="hidden" name="keyId" value="<%= key.id %>">
                
                <label for="alocatee">Allocatee</label>
                <input type="text" name="allocatee">
                
                <button type="submit">Check out key</button>
            </form>
        </main>
        
        <%- include("../include/footer.ejs"); %>
    </body>
</html>
